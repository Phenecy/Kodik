<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Здесь бы мог быт ваш заголовок"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/rubik_bold"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lesson_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="270dp"
                android:hint="А здесь - текст"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/rubik"
                android:text="Test text"
                android:textColor="#000000" />

            <Button
                android:id="@+id/next_lesson_button"
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ef_round_corner_button_green_gradient"
                android:fontFamily="@font/rubik"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/lesson_card_button"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>