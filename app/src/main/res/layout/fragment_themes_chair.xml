<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/courses_text_view"
        android:layout_width="330dp"
        android:layout_height="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="top"
        android:text="@string/themes_of_course"
        android:textAppearance="@style/RegistrationTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lesson_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courses_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>